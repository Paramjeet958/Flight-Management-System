<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

<head>
    <link href="/css/main.css" type="text/css" rel="stylesheet">
</head>

<body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); -%>

    <article>
        <div class="container mt-5 col-sm-12 col-md-8 col-md-8">
            <div class="row justify-content-center">
                <div class="col-md-8 ">
                    <div class="card">
                        <div class="card-header bg-success text-white text-center">
                            <h2>Search for Flights</h2>
                        </div>
                        <div class="card-body">
                            <div class="radio">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label><input type="radio" name="tripType" value="oneway"> One-way</label>
                                        <label><input type="radio" name="tripType" value="roundtrip"> Round Trip</label>
                                    </div>
                                </div>
                                <form action="/showFlights" method="POST" data-sb-form-api-token="API_TOKEN">
                                    <div class="mb-3">
                                        <select class="form-control" id="departure" name="origin" data-sb-validations="origin:required">
                                            <option value="" disabled selected>Departure</option>
                                            <option value="jfk">John F. Kennedy International Airport (USA)</option>
                                            <option value="lhr">London Heathrow Airport (UK)</option>
                                            <option value="cdg">Charles de Gaulle Airport (France)</option>
                                            <option value="hnd">Tokyo Haneda Airport (Japan)</option>
                                            <option value="syd">Sydney Kingsford Smith Airport (Australia)</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <select class="form-control" id="destination" name="destination" data-sb-validations="destination:required">
                                            <option value="" disabled selected>Destination</option>
                                            <option value="jfk">John F. Kennedy International Airport (USA)</option>
                                            <option value="lhr">London Heathrow Airport (UK)</option>
                                            <option value="cdg">Charles de Gaulle Airport (France)</option>
                                            <option value="hnd">Tokyo Haneda Airport (Japan)</option>
                                            <option value="syd">Sydney Kingsford Smith Airport (Australia)</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <input type="date" class="form-control" id="departureDate" name="departureDate" data-sb-validations="departureDate:required">
                                    </div>
                                    <div class="mb-3" id="returnDateField" style="display: none;">
                                        <input type="date" class="form-control" id="returnDate" name="returnDate">
                                    </div>
                                    <div class="mb-3">
                                        <input type="number" class="form-control" placeholder="passengers" min="1" max="10" value="1">
                                    </div>
                                    <div class="mb-3">
                                        <select name="class" id="cars" class="form-control">
                                            <option value="Economy">Economy</option>
                                            <option value="Primum">Primum</option>
                                            <option value="Business">Business</option>
                                            <option value="First">First</option>
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-success w-100">Search Flights</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <div class="centered-header">
        <h2>Your Trust Our Responsibility</h2>
        <hr>
    </div>
    <!-- IMAGE CAROUSEL -->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/assets/img/pexels-137666-747079.jpg" class="d-block w-100" alt="First Image">
            </div>
            <div class="carousel-item">
                <img src="/assets/img/pexels-ashutoshsonwani-1720957.jpg" class="d-block w-100" alt="Second Image">
            </div>
            <div class="carousel-item">
                <img src="/assets/img/pexels-visionmonkeyandy-1034669.jpg" class="d-block w-100" alt="Third Image">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Centered Header -->
    <div class="centered-header">
