        <article>
          
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header bg-success text-white text-center">
                            <h2>Add Flights</h2>
                        </div>
                        <div class="card-body">
                            <div class="radio">
                           <div class="row">
                           
                                 </div>
                                 <form action= "/addflight " id="addflights" method="POST" data-sb-form-api-token="API_TOKEN" style="width:80% ;margin-left:auto; margin-right:auto;" >
                                
                                <div class="mb-3">
                                    <!-- <label for="destination" class="form-label">Destination City</label> -->
                                    <input class="form-control" id="flightNumber" name="flightNumber" type="text" placeholder="Flight Number" data-sb-validations="flightNumber:required"  />
                                </div>
                            
                                <div class="mb-3">
                                    <!-- <label for="departureDate" class="form-label">Departure Date</label> -->
                                    <input class="form-control" id="flightName" name="flightName" type="text" placeholder="Flight Name" data-sb-validations="flightName:required"  />
                                </div>
                                <div class="mb-3">
                                    <!-- <label for="returnDate" class="form-label">Return Date</label> -->
                                    <input class="form-control" id="origin" name="origin" type="text" placeholder="origin" data-sb-validations="origin:required"  />
                                </div>
                                <div class="mb-3">
                                    <!-- <label for="passengers" class="form-label">Number of Passengers</label> -->
                                    <input class="form-control" id="destination" name="destination" type="text" placeholder="destination" data-sb-validations="destination:required"  />
                                </div>
                                <div class="mb-3">
                                    <!-- <label for="passengers" class="form-label">Number of Passengers</label> -->
                                    <input class="form-control" id="duration" name="duration" type="number" placeholder="duration" data-sb-validations="duration:required"  />
                                </div>
                                <div class="mb-3">
                                    <!-- <label for="passengers" class="form-label">Number of Passengers</label> -->
                                    <input class="form-control" id="departureDate" name="departureDate" type="date" placeholder="departureDate" data-sb-validations="departureTime:required"  />
                                </div>
                                <div class="mb-3">
                                    <!-- <label for="passengers" class="form-label">Number of Passengers</label> -->
                                    <input class="form-control" id="departureTime" name="departureTime" type="time" placeholder="departureTime" data-sb-validations="departureTime:required"  />
                                </div>
                                
                                <div class="mb-3">
                                    <!-- <label for="passengers" class="form-label">Number of Passengers</label> -->
                                    <input class="form-control" id="arrivalDate" name="arrivalDate" type="date" placeholder="arrivalDate" data-sb-validations="arrivalDate:required"  />
                                </div>
                                <div class="mb-3">
                                    <!-- <label for="passengers" class="form-label">Number of Passengers</label> -->
                                    <input class="form-control" id="arrivalTime" name="arrivalTime" type="time" placeholder="arrivalTime" data-sb-validations="arrivalTime:required"  />
                                </div>
                                <div class="mb-3">
                                   
                                    
                                    <select name="status" id="status" class="form-control">
                                            <option value="scheduled">scheduled</option>
                                             <option value="delayed">delayed</option>
                                            <option value="cancelled">cancelled</option>
                                            <option value="completed">completed</option>
                                    </select>
                                        
                                     </div>
                                <button type="submit" class="btn btn-success w-100">Add Flight</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </article>
        <!-- Footer-->
       <!-- <%- include('layouts/footer'); -%> -->
        <%- include('layouts/scripts'); -%>
    </body>
</html>




